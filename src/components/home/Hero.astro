---
import { IHeroProps } from "@types";
const { name, about } = Astro.props as IHeroProps;
---

<section
  class="bg-cover relative bg-center h-[750px] w-full flex flex-col justify-center items-center"
>
  <div class="container absolute z-10">
    <h1>{name}</h1>
    <h2 class="text-2xl mb-8 text-blue">Full Stack Developer</h2>
    <p class="dark:text-light text-lg mb-16">
      {about}
    </p>
  </div>
