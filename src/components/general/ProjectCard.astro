---
import { IProjectDetails } from "../../types";
import IconGitHub from "../icons/github.astro";
import IconLink from "../icons/link.astro";

const { projectDetail } = Astro.props as IProjectDetails;
const { title, thumbnail, liveUrl, githubUrl, isFeatured } = projectDetail;
---

{
  isFeatured && (
    <article class="w-full max-h-[25rem] overflow-hidden relative group">
      <div class="flex items-center absolute right-4 top-4 z-10">
        {githubUrl && (
          <a
            href={githubUrl}
            class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md"
            aria-label="Social Media"
            target="_blank"
          >
            <IconGitHub />
          </a>
        )}

        {liveUrl && (
          <a
            href={liveUrl}
            class="text-white p-3 bg-black/50 rounded-full backdrop-blur-md ml-1"
            aria-label="Social Media"
            target="_blank"
          >
            <IconLink />
          </a>
        )}
      </div>
      <img
        src={thumbnail}
        class="w-full h-auto scale-100 hover:scale-110 transition duration-[1.5s]"
        loading="lazy"
        width="100%"
        height="100%"
        alt="featureImage"
      />
      <div class="absolute w-full bottom-0 left-0 backdrop-blur-md  text-white bg-black/50 p-4 translate-y-[100%] group-hover:translate-y-0 transition duration-700 flex justify-between text-center">
        <h3 class="mr-2 text-xl">{title}</h3>
      </div>
    </article>
  )
}
